<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #232526 0%, #414345 100%);
            color: #f1f1f1;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 95%;
            max-width: 1200px;
            margin: 30px auto;
            display: flex;
            flex-wrap: wrap;
            gap: 32px;
            background: rgba(49, 51, 53, 0.95);
            border-radius: 18px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.25);
            padding: 32px;
        }
        .left-side, .right-side {
            background: rgba(44, 47, 51, 0.98);
            padding: 28px 22px;
            border-radius: 14px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.18);
            flex: 1 1 350px;
            min-width: 320px;
        }
        .profile-header {
            display: flex;
            align-items: center;
            gap: 18px;
            margin-bottom: 24px;
            animation: fadeIn 1s;
        }
        .profile-header img {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            border: 3px solid #4db8ff;
            object-fit: cover;
            box-shadow: 0 2px 8px #222;
            transition: transform 0.3s;
        }
        .profile-header img:hover {
            transform: scale(1.08) rotate(-2deg);
        }
        .profile-header h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #4db8ff;
            margin: 0;
        }
        .profile-header p {
            color: #aaa;
            margin-top: 8px;
        }
        .profile-header a {
            color: #4db8ff;
            text-decoration: underline;
            font-weight: 600;
        }
        .post-form label {
            font-weight: 600;
            color: #4db8ff;
            margin-bottom: 6px;
            display: block;
        }
        .post-form input, .post-form textarea, input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-top: 8px;
            border-radius: 8px;
            border: 1px solid #333;
            background: #23272a;
            color: #f1f1f1;
            font-size: 1rem;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        .post-form input:focus, .post-form textarea:focus, input[type="file"]:focus {
            border-color: #4db8ff;
            box-shadow: 0 0 8px #4db8ff44;
        }
        .btn, .post-form button, .btn-warning, .btn-danger {
            background: linear-gradient(90deg, #4db8ff 0%, #007acc 100%);
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            color: #fff;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            margin-top: 16px;
            margin-right: 8px;
            box-shadow: 0 2px 8px #222;
            transition: background 0.3s, transform 0.2s, box-shadow 0.2s;
            outline: none;
            text-decoration: none;
            display: inline-block;
        }
        .btn:hover, .post-form button:hover, .btn-warning:hover, .btn-danger:hover {
            background: linear-gradient(90deg, #007acc 0%, #4db8ff 100%);
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 4px 16px #007acc55;
        }
        .btn-warning {
            background: linear-gradient(90deg, #ffb84d 0%, #ff9900 100%);
            color: #23272a;
        }
        .btn-warning:hover {
            background: linear-gradient(90deg, #ff9900 0%, #ffb84d 100%);
            color: #23272a;
        }
        .btn-danger {
            background: linear-gradient(90deg, #ff4d4d 0%, #cc0000 100%);
        }
        .btn-danger:hover {
            background: linear-gradient(90deg, #cc0000 0%, #ff4d4d 100%);
        }
        .left-side .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 18px;
        }
        .post {
            background: rgba(34, 36, 38, 0.98);
            padding: 22px 18px;
            border-radius: 12px;
            margin-top: 22px;
            margin-bottom: 8px;
            box-shadow: 0 2px 8px #222;
            animation: fadeInUp 0.8s;
            transition: box-shadow 0.3s, transform 0.3s;
        }
        .post:hover {
            box-shadow: 0 6px 24px #4db8ff33;
            transform: translateY(-2px) scale(1.01);
        }
        .post h3 {
            color: #4db8ff;
            margin-bottom: 8px;
            font-size: 1.2rem;
        }
        .post h4 {
            color: #ffb84d;
            margin-bottom: 8px;
            font-size: 1.1rem;
        }
        .post small {
            display: block;
            color: #aaa;
            margin-bottom: 12px;
        }
        .post .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }
        .comment-item {
            background: #23272a;
            padding: 8px;
            border-radius: 6px;
            margin-bottom: 6px;
            color: #f1f1f1;
        }
        @media (max-width: 900px) {
            .container {
                flex-direction: column;
                padding: 18px;
            }
            .left-side, .right-side {
                min-width: unset;
                padding: 18px 10px;
            }
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px);}
            to { opacity: 1; transform: translateY(0);}
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px);}
            to { opacity: 1; transform: translateY(0);}
        }
        a {
            color: #4db8ff;
            text-decoration: none;
            font-weight: 600;
        }
        a:hover {
            text-decoration: underline;
            color: #ffb84d;
        }
        /* Navbar styles */
        .navbar-nav {
            flex-direction: row !important;
            gap: 8px;
        }
        .navbar-nav .nav-item {
            margin-right: 6px;
        }
        .navbar-nav .nav-link {
            color: #f1f1f1 !important;
            font-weight: 600;
            transition: color 0.2s, background 0.2s;
            border-radius: 6px;
            position: relative;
            padding: 8px 16px;
        }
        .navbar-nav .nav-link:hover, .navbar-nav .nav-link:focus {
            color: #ffb84d !important;
            background: #23272a !important;
            text-decoration: underline;
        }
        .navbar-brand {
            color: #4db8ff !important;
            font-weight: 700;
            font-size: 1.3rem;
            letter-spacing: 1px;
            transition: color 0.2s;
        }
        .navbar-brand:hover {
            color: #ffb84d !important;
            text-shadow: 0 2px 8px #4db8ff55;
        }
        .badge.bg-danger {
            font-size: 0.8rem;
            vertical-align: top;
            margin-left: 4px;
            animation: pulseBadge 1s infinite;
        }
        @keyframes pulseBadge {
            0% { box-shadow: 0 0 0 0 #ff4d4d55; }
            70% { box-shadow: 0 0 0 8px #ff4d4d11; }
            100% { box-shadow: 0 0 0 0 #ff4d4d55; }
        }
    </style>
    <!-- Bootstrap CSS for navbar toggler -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Separate Navbar for Profile Page -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: #232526; border-bottom: 2px solid #4db8ff;">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="/" style="color:#4db8ff;">Social App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center flex-row gap-2">
            <li class="nav-item">
              <a class="nav-link" href="/all-posts">View All Posts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link position-relative" href="/notifications">
                Notifications
                <% if (typeof newNotificationCount !== 'undefined' && newNotificationCount > 0) { %>
                  <span class="badge bg-danger position-absolute top-0 start-100 translate-middle"><%= newNotificationCount %></span>
                <% } %>
              </a>
            </li>
            <li class="nav-item">
              <form action="/logout" method="GET" class="d-inline">
                <button class="btn btn-link nav-link" type="submit" style="padding: 0; border: none; background: none; color:#ff4d4d; font-weight:600;">Logout</button>
              </form>
            </li>
          </ul>
          <form class="d-flex ms-2" action="/search" method="GET" role="search">
            <input class="form-control me-2" type="search" placeholder="Search users..." aria-label="Search" name="q" required
              style="background:#b5b5b5; color:#d5f00c; border:1px solid #4db8ff;">
            <button class="btn btn-outline-info" type="submit" style="border-radius:8px; font-weight:600;">Search</button>
          </form>
        </div>
      </div>
    </nav>
    <div class="container">
        <!-- Left Side: Profile & Post Form -->
        <div class="left-side">
            <div class="profile-header">
                <img src="<%= user.profilePic %>" alt="Profile Picture">
                <h2><%= user.name %></h2>
            </div>
            <p style="color:#aaa; margin-top: 8px;">
                Followers: <a href="/user/<%= user._id %>/followers"><%= user.followers ? user.followers.length : 0 %></a>
            </p>
            <form action="/updateProfilePic" method="POST" enctype="multipart/form-data" class="post-form">
                <label>Change Profile Picture:</label>
                <input type="file" name="profilePic" accept="image/*">
                <button type="submit" class="btn">Update</button>
            </form>
            <h3 style="margin-top:32px;">Create a Post</h3>
            <form class="post-form" action="/post" method="POST" enctype="multipart/form-data">
                <input type="text" name="title" placeholder="Post Title" required>
                <textarea name="content" placeholder="Write something..." rows="4" required></textarea>
                <input type="file" name="image" accept="image/*" style="margin-top: 8px;">
                <button type="submit" class="btn">Post</button>
            </form>
            <div class="btn-group">
                <a href="/all-posts" class="btn">View All Posts</a>
                <form action="/logout" method="GET" style="display:inline;">
                    <button class="btn btn-danger" type="submit">Logout</button>
                </form>
            </div>
        </div>

        <!-- Right Side: User Posts -->
        <div class="right-side">
            <h3 style="color:#4db8ff;">Your Posts</h3>
            <% if (posts.length === 0) { %>
                <p style="color:#aaa;">No posts yet. Start sharing your thoughts!</p>
            <% } else { %>
                <% posts.forEach((post) => { %>
                <div class="post">
                    <h3><%= user.name %></h3>
                    <small>Posted on: <%= post.createdAt.toDateString() %></small>
                    <h4><%= post.title %></h4>
                    <p><%= post.content %></p>
                    <% if (post.image) { %>
                        <img src="<%= post.image %>" alt="Post Image" style="max-width: 500px; height: auto; margin-top: 10px; border-radius: 8px; display: block;">
                    <% } %>
                    <div>
                        <button class="btn btn-info btn-sm show-comments-btn" type="button" data-post-id="<%= post._id %>">Show Comments (<%= post.comments.length %>)</button>
                        <div class="comments-container" id="comments-<%= post._id %>" style="display:none; margin-top: 10px;">
                            <% if (post.comments.length === 0) { %>
                                <p style="color:#aaa;">No comments yet.</p>
                            <% } else { %>
                                <% post.comments.forEach((comment, index) => { %>
                                    <div class="comment-item" style="<% if(index >= 3) { %>display:none;<% } %>">
                                        <strong><%= comment.user ? comment.user.name : 'Unknown' %></strong>: <%= comment.content %>
                                        <% if (user._id.toString() === (comment.user ? comment.user._id.toString() : '') || user._id.toString() === post.user.toString()) { %>
                                            <form action="/post/<%= post._id %>/comment/<%= comment._id %>/delete" method="POST" style="display:inline;">
                                                <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Delete this comment?')">Delete</button>
                                            </form>
                                        <% } %>
                                    </div>
                                <% }) %>
                                <% if(post.comments.length > 3) { %>
                                    <button class="btn btn-secondary btn-sm load-more-comments-btn" data-post-id="<%= post._id %>">Load More</button>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-warning btn-sm" onclick="editPost('<%= post._id %>', '<%= post.title %>', '<%= post.content %>')">Edit</button>
                        <form action="/post/<%= post._id %>/delete" method="POST" style="display:inline;">
                            <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                        </form>
                    </div>
                </div>
                <% }) %>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function editPost(id, title, content) {
            const newTitle = prompt('Edit Title:', title);
            const newContent = prompt('Edit Content:', content);
            if (newTitle !== null && newContent !== null) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/post/${id}/edit`;
                form.innerHTML = `
                    <input type="hidden" name="title" value="${newTitle}">
                    <input type="hidden" name="content" value="${newContent}">
                `;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const showButtons = document.querySelectorAll('.show-comments-btn');
            const loadMoreButtons = document.querySelectorAll('.load-more-comments-btn');

            showButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const postId = button.getAttribute('data-post-id');
                    const commentsContainer = document.getElementById(`comments-${postId}`);
                    if (commentsContainer.style.display === 'none') {
                        commentsContainer.style.display = 'block';
                        button.textContent = 'Hide Comments';
                    } else {
                        commentsContainer.style.display = 'none';
                        button.textContent = `Show Comments (${commentsContainer.children.length})`;
                        // Reset comments display to show only first 3 when hiding
                        const commentItems = commentsContainer.querySelectorAll('.comment-item');
                        commentItems.forEach((item, index) => {
                            if (index >= 3) item.style.display = 'none';
                        });
                        // Hide load more button if exists
                        const loadMoreBtn = commentsContainer.querySelector('.load-more-comments-btn');
                        if (loadMoreBtn) loadMoreBtn.style.display = 'inline-block';
                    }
                });
            });

            loadMoreButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const postId = button.getAttribute('data-post-id');
                    const commentsContainer = document.getElementById(`comments-${postId}`);
                    const hiddenComments = commentsContainer.querySelectorAll('.comment-item[style*="display: none"]');
                    let count = 0;
                    hiddenComments.forEach(item => {
                        if (count < 3) {
                            item.style.display = 'block';
                            count++;
                        }
                    });
                    if (commentsContainer.querySelectorAll('.comment-item[style*="display: none"]').length === 0) {
                        button.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>
