<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Social App</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/all-posts">All Posts</a>
                <a class="nav-link" href="/profile">Profile</a>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h2>Search Results for "<%= query %>"</h2>
        <% if (users.length === 0) { %>
            <p>No users found.</p>
        <% } else { %>
            <div class="row">
                <% users.forEach(user => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <img src="<%= user.profilePic || '/image/default.png' %>" alt="Profile Picture" class="rounded-circle mb-2" style="width: 80px; height: 80px;">
                                <h5 class="card-title"><%= user.name %></h5>
                                <a href="/user/<%= user._id %>" class="btn btn-primary">View Profile</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>
</body>
</html>
